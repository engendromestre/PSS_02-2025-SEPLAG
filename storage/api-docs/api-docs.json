        "/api/fotos": {
            "post": {
                "tags": [
                    "FotoPessoa"
                ],
                "summary": "Fazer upload de uma ou mais fotos para uma pessoa",
                "description": "Upload de múltiplas fotos associadas a uma pessoa.",
                "operationId": "uploadFotosPessoa",
                "requestBody": {
                    "required": true,
                    "content": {
                        "multipart/form-data": {
                            "schema": {
                                "required": [
                                    "pes_id",
                                    "fotos"
                                ],
                                "properties": {
                                    "pes_id": {
                                        "description": "ID da pessoa",
                                        "type": "integer"
                                    },
                                    "fotos": {
                                        "description": "Arquivos de imagem para upload",
                                        "type": "array",
                                        "items": {
                                            "type": "string",
                                            "format": "binary"
                                        }
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Fotos salvas com sucesso",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/FotoPessoa"
                                    }
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Erro de validação"
                    },
                    "401": {
                        "description": "Não autorizado"
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        },
