    "components": {
        "schemas": {
            "FotoPessoa": {
                "title": "FotoPessoa",
                "required": [
                    "id",
                    "pes_id",
                    "url",
                    "url_temporaria"
                ],
                "properties": {
                    "id": {
                        "type": "integer",
                        "example": 1
                    },
                    "pes_id": {
                        "type": "integer",
                        "example": 12
                    },
                    "url": {
                        "type": "string",
                        "format": "uri",
                        "example": "https://minio.local/fotos_pessoas/12/foto1.jpg"
                    },
                    "url_temporaria": {
                        "type": "string",
                        "format": "uri",
                        "example": "http://localhost:9000/fotos_pessoas/12/foto1.jpg?X-Amz-Expires=600&X-Amz-Signature=abc123..."
                    },
                    "created_at": {
                        "type": "string",
